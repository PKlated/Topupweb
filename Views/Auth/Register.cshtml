@{
    ViewBag.Title = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register - GAMEWEB</title>

    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-[#F8F8F8] min-h-screen flex items-center justify-center text-black">

    <!-- REGISTER CARD -->
    <div class="w-full max-w-md bg-white border-4 border-black
                shadow-[6px_6px_0_#000] p-6">

        <!-- Logo -->
        <div class="text-center mb-6">
            <h1 class="text-3xl font-extrabold tracking-widest">
                GAMEWEB
            </h1>
            <p class="text-sm text-gray-600 mt-1">
                Create your account
            </p>
        </div>

        <!-- Error -->
        @if (ViewBag.Error != null)
        {
            <div class="mb-4 px-3 py-2 border-2 border-black bg-[#E3350D]
                        text-white font-bold text-sm shadow-[2px_2px_0_#000]">
                @ViewBag.Error
            </div>
        }

        <!-- Form -->
        <form method="post" class="space-y-4">

            <div>
                <label class="block font-bold mb-1">Username</label>
                <input type="text" name="username"
                       class="w-full px-3 py-2 border-2 border-black
                              focus:outline-none shadow-[2px_2px_0_#000]" />
            </div>

            <div>
                <label class="block font-bold mb-1">Email</label>
                <input type="email" name="email"
                       class="w-full px-3 py-2 border-2 border-black
                              focus:outline-none shadow-[2px_2px_0_#000]" />
            </div>

            <div>
                <label class="block font-bold mb-1">Password</label>
                <input type="password" name="password"
                       class="w-full px-3 py-2 border-2 border-black
                              focus:outline-none shadow-[2px_2px_0_#000]" />
            </div>

            <div>
                <label class="block font-bold mb-1">Confirm Password</label>
                <input type="password" name="confirmPassword"
                       class="w-full px-3 py-2 border-2 border-black
                              focus:outline-none shadow-[2px_2px_0_#000]" />
            </div>

            <button type="submit"
                    class="w-full mt-2 px-4 py-2 border-2 border-black
                           bg-[#3B4CCA] text-white shadow-[3px_3px_0_#000]
                           hover:translate-x-[1px] hover:translate-y-[1px]
                           hover:shadow-none font-extrabold">
                REGISTER
            </button>
        </form>

        <!-- Footer -->
        <div class="mt-6 text-center text-sm">
            <p>
                Already have an account?
                <a asp-controller="Auth" asp-action="Login"
                   class="font-bold underline hover:text-[#E3350D]">
                    Login
                </a>
            </p>

            <a asp-controller="User" asp-action="Home"
               class="inline-block mt-3 font-bold text-gray-600 hover:text-black">
                ‚Üê Back to Home
            </a>
        </div>

    </div>

</body>
</html>
