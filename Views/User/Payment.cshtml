@{
    ViewData["Title"] = "Payment";
    Layout = "~/Views/Shared/_Layout.navbar.cshtml";
}

<div class="bg-white border-4 border-black shadow-[6px_6px_0_#000] p-6 max-w-xl mx-auto">
    <h1 class="text-2xl font-extrabold mb-2">PAYMENT</h1>

    <p class="mb-4">
        You selected:
        <span class="font-extrabold">@ViewBag.Package</span>
    </p>

    <div class="border-2 border-black p-4 mb-4">
        <p class="text-sm">Payment gateway coming soon.</p>
    </div>

    <button class="w-full px-4 py-2 border-2 border-black bg-[#4CAF50]
                   shadow-[3px_3px_0_#000] font-bold text-white">
        CONFIRM PAYMENT
    </button>
</div>
