@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.navbar.cshtml";
}

<!-- HERO -->
<div class="relative bg-gradient-to-r from-[#FFCB05] via-[#3B82F6] to-[#EF4444]
            border-4 border-black shadow-[6px_6px_0_#000]
            p-8 mb-10 text-black">

    <div class="max-w-5xl">
        <h1 class="text-4xl font-extrabold mb-3">
            GAMEWEB CENTER
        </h1>
        <p class="text-sm font-bold mb-6">
            Collect rewards, join events, and manage your account.
        </p>

        <div class="flex gap-4">
            <a asp-controller="User" asp-action="TopUp"
               class="px-6 py-3 border-2 border-black bg-white
                      font-extrabold
                      shadow-[3px_3px_0_#000] hover:shadow-none">
                TOP-UP
            </a>

            <a asp-controller="Event" asp-action="Index"
               class="px-6 py-3 border-2 border-black bg-white
                      font-bold
                      shadow-[3px_3px_0_#000] hover:shadow-none">
                EVENTS
            </a>
        </div>
    </div>

    <!-- HERO IMAGE PLACEHOLDER -->
    <div class="absolute right-6 top-6 w-72 h-40
                bg-white border-4 border-black
                flex items-center justify-center text-sm font-bold text-gray-500">
        BANNER PLACEHOLDER
    </div>
</div>

<!-- FEATURED -->
<h2 class="text-2xl font-extrabold mb-4">Featured</h2>

<div class="grid md:grid-cols-2 gap-6 mb-10">

    <!-- FEATURE CARD -->
    <div class="bg-white border-4 border-black
                shadow-[4px_4px_0_#000] p-5">

        <div class="h-40 bg-gray-100 mb-4
                    flex items-center justify-center text-sm font-bold text-gray-400">
            FEATURE IMAGE
        </div>

        <h3 class="text-xl font-extrabold mb-1">
            Bonus Gem Pack
        </h3>
        <p class="text-sm text-gray-600 mb-3">
            Extra gems available for a limited time.
        </p>

        <a asp-controller="User" asp-action="TopUp"
           class="inline-block px-4 py-2 bg-[#FFCB05]
                  text-black font-extrabold
                  border-2 border-black">
            VIEW
        </a>
    </div>

    <!-- EVENT CARD -->
    <div class="bg-white border-4 border-black
                shadow-[4px_4px_0_#000] p-5">

        <div class="h-40 bg-gray-100 mb-4
                    flex items-center justify-center text-sm font-bold text-gray-400">
            EVENT IMAGE
        </div>

        <h3 class="text-xl font-extrabold mb-1">
            Limited-Time Event
        </h3>
        <p class="text-sm text-gray-600 mb-3">
            Participate to earn exclusive rewards.
        </p>

        <a asp-controller="Event" asp-action="Index"
           class="inline-block px-4 py-2 bg-white
                  text-black font-extrabold
                  border-2 border-black">
            VIEW EVENT
        </a>
    </div>

</div>

<!-- BROWSE -->
<h2 class="text-2xl font-extrabold mb-4">Browse</h2>

<div class="grid md:grid-cols-3 gap-6">

    <div class="bg-white border-4 border-black
                p-5 shadow-[4px_4px_0_#000]">
        <h3 class="font-extrabold mb-2">Top-Up</h3>
        <p class="text-sm text-gray-600 mb-3">
            Purchase in-game currency.
        </p>
        <a asp-controller="User" asp-action="TopUp"
           class="font-bold underline">
            Go →
        </a>
    </div>

    <div class="bg-white border-4 border-black
                p-5 shadow-[4px_4px_0_#000]">
        <h3 class="font-extrabold mb-2">Events</h3>
        <p class="text-sm text-gray-600 mb-3">
            View current and upcoming events.
        </p>
        <a asp-controller="Event" asp-action="Index"
           class="font-bold underline">
            View →
        </a>
    </div>

    <div class="bg-white border-4 border-black
                p-5 shadow-[4px_4px_0_#000]">
        <h3 class="font-extrabold mb-2">Inventory</h3>
        <p class="text-sm text-gray-600 mb-3">
            View your owned items.
        </p>

        @if (User.Identity.IsAuthenticated)
        {
            <a asp-controller="User" asp-action="Inventory"
               class="font-bold underline">
                Open →
            </a>
        }
        else
        {
            <span class="text-sm text-gray-400">
                Login required
            </span>
        }
    </div>

</div>
