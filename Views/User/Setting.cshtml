@{
    ViewData["Title"] = "User Settings";
    Layout = "~/Views/Shared/_Layout.navbar.cshtml";
}

<!-- PAGE HEADER -->
<div class="bg-white border-4 border-black shadow-[6px_6px_0_#000] p-6 mb-8">
    <h1 class="text-3xl font-extrabold tracking-wide mb-2">
        USER SETTINGS
    </h1>
    <p class="text-sm text-gray-700">
        Manage your account preferences and profile settings.
    </p>
</div>

@if (!User.Identity.IsAuthenticated)
{
    <!-- GUEST WARNING -->
    <div class="bg-[#FFFBCC] border-4 border-black shadow-[4px_4px_0_#000] p-5">
        <p class="font-extrabold mb-2">⚠ Login Required</p>
        <p class="text-sm mb-4">
            Please login to access your account settings.
        </p>

        <a asp-controller="Auth" asp-action="Login"
           class="inline-block px-4 py-2 border-2 border-black bg-white
                  shadow-[2px_2px_0_#000] font-bold">
            LOGIN
        </a>
    </div>
}
else
{
    <!-- SETTINGS FORM -->
    <div class="bg-white border-4 border-black shadow-[4px_4px_0_#000] p-6 max-w-xl">

        <form method="post">

            <!-- USERNAME (READ ONLY) -->
            <div class="mb-4">
                <label class="block font-extrabold mb-1">
                    Username
                </label>
                <input type="text"
                       value="@User.Identity.Name"
                       disabled
                       class="w-full px-3 py-2 border-2 border-black bg-gray-100 font-bold" />
            </div>

            <!-- EMAIL (MOCK) -->
            <div class="mb-4">
                <label class="block font-extrabold mb-1">
                    Email
                </label>
                <input type="email"
                       placeholder="user@email.com"
                       class="w-full px-3 py-2 border-2 border-black" />
            </div>

            <!-- PASSWORD -->
            <div class="mb-4">
                <label class="block font-extrabold mb-1">
                    New Password
                </label>
                <input type="password"
                       placeholder="••••••••"
                       class="w-full px-3 py-2 border-2 border-black" />
            </div>

            <!-- NOTIFICATIONS -->
            <div class="mb-6">
                <label class="flex items-center space-x-2">
                    <input type="checkbox" checked
                           class="w-4 h-4 border-2 border-black" />
                    <span class="font-bold text-sm">
                        Receive event & promotion notifications
                    </span>
                </label>
            </div>

            <!-- ACTION BUTTONS -->
            <div class="flex space-x-3">

                <button type="submit"
                        class="px-4 py-2 border-2 border-black bg-[#4CAF50]
                               shadow-[3px_3px_0_#000] hover:translate-x-[1px]
                               hover:translate-y-[1px] hover:shadow-none
                               font-bold text-white">
                    SAVE CHANGES
                </button>

                <a asp-controller="User" asp-action="Home"
                   class="px-4 py-2 border-2 border-black bg-white
                          shadow-[2px_2px_0_#000] font-bold">
                    CANCEL
                </a>

            </div>

        </form>

    </div>
}
